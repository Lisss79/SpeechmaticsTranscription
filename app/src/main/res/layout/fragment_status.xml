<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewFileNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Имя файла: " />

    <TextView
        android:id="@+id/textViewFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/textViewFileNameLabel"
        android:ellipsize="start"
        android:maxLines="1"
        android:text="\?" />

    <TextView
        android:id="@+id/textViewFileStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFileNameLabel"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:text="Статус файла: " />

    <TextView
        android:id="@+id/textViewFileStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFileNameLabel"
        android:layout_toEndOf="@id/textViewFileStatusLabel"
        android:text="\?" />

    <TextView
        android:id="@+id/textViewJobIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textViewFileStatusLabel"
        android:text="Id работы: " />

    <TextView
        android:id="@+id/textViewJobId"
        android:layout_below="@id/textViewFileStatusLabel"
        android:layout_toEndOf="@id/textViewJobIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\?" />

    <TextView
        android:id="@+id/textViewJobTypeLabel"
        android:layout_below="@id/textViewJobIdLabel"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тип работы: " />

    <TextView
        android:id="@+id/textViewJobType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJobIdLabel"
        android:layout_toEndOf="@id/textViewJobTypeLabel"
        android:text="\?" />

    <TextView
        android:id="@+id/textViewJobStatusLabel"
        android:layout_below="@id/textViewJobTypeLabel"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус работы: " />

    <TextView
        android:id="@+id/textViewJobStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJobTypeLabel"
        android:layout_toEndOf="@id/textViewJobStatusLabel"
        android:text="\?" />

    <TextView
        android:id="@+id/textViewTranscriptionStatusLabel"
        android:layout_below="@id/textViewJobStatusLabel"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расшифровка: " />

    <TextView
        android:id="@+id/textViewTranscriptionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewJobStatusLabel"
        android:layout_toEndOf="@id/textViewTranscriptionStatusLabel"
        android:text="\?" />


</RelativeLayout>